<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/standard_margin"
    tools:context="com.example.bipin.assignment.activities.SongDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_lg" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:text="Cancel"
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <Space
                android:layout_width="@dimen/double_double_margin"
                android:layout_height="wrap_content" />

            <Button
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:text="Find Lyrics"
                android:id="@+id/btn_findLyrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:fontFamily="@font/lvnm"
        android:layout_marginTop="@dimen/standard_margin"
        android:text="@string/song_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
