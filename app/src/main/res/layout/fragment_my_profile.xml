<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bipin.assignment.fragments.MyProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/standard_margin">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/table_border"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/half_margin">

                <TextView
                    android:id="@+id/tv_user_id_label"
                    style="@style/custom_textview_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/quarter_margin"
                    android:text="@string/Username" />

                <View
                    android:id="@+id/view_separator"
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_subscriber_id"
                    style="@style/custom_textview_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/two_dp"
                    android:paddingTop="@dimen/two_dp"
                    android:text="bipin.gawand" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/half_margin">

                <TextView
                    android:id="@+id/tv_name_label"
                    style="@style/custom_textview_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/two_dp"
                    android:text="Name" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/custom_textview_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/two_dp"
                    android:paddingTop="@dimen/two_dp"
                    android:text="Bipin Gawand" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/half_margin">

                <TextView
                    android:id="@+id/tv_mobile_label"
                    style="@style/custom_textview_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/two_dp"
                    android:text="City" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_mobile"
                    style="@style/custom_textview_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_weight="1"
                    android:text="Mumbai" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/half_margin"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_dob_label"
                    style="@style/custom_textview_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/two_dp"
                    android:text="Request" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_subscription_end"
                    style="@style/custom_textview_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/half_margin"
                    android:layout_weight="1"
                    android:text="4" />

            </LinearLayout>


        </LinearLayout>


        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin" />

        <TextView
            android:layout_marginTop="@dimen/standard_margin"
            android:id="@+id/tvUser"
            style="@style/custom_textview_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</FrameLayout>
